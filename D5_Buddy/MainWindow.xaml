<Window x:Class="D5_Buddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D5_Buddy"
        mc:Ignorable="d"
        Title="D5 Card Buddy" Height="450" Width="800" MinWidth="800" MinHeight="450" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="109*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="LoadCard_Button" Content="Load Card" HorizontalAlignment="Left" Margin="22,21,0,0" VerticalAlignment="Top" Width="94" Click="LoadCard_Button_Click" Height="20"/>
        <Button x:Name="SaveCard_Button" Content="Save Card" HorizontalAlignment="Left" Margin="22,60,0,0" VerticalAlignment="Top" Width="94" Click="SaveCard_Button_Click" Height="20" IsEnabled="False"/>
        <TabControl x:Name="tabControl" Grid.Column="1" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="634">
            <TabItem Header="General">
                <Grid>
                    <Label x:Name="Name_Label" Content="Name:" Margin="10,10,511,332"/>
                    <TextBox x:Name="Name_TextBox" Height="23" TextWrapping="Wrap" Margin="85,12,386,336" MaxLength="6"/>
                    <Label x:Name="DPoint_Label" Content="DPoints:" Margin="10,41,511,301"/>
                    <TextBox x:Name="DPoint_TextBox" Height="23" TextWrapping="Wrap" Margin="85,43,386,305" MaxLength="6"/>
                    <Label x:Name="Rank_Label" Content="Rank:" Margin="10,72,511,270"/>
                    <Label x:Name="Rank_Debug_Label" Content="D3" Margin="83,72,438,270"/>
                </Grid>
            </TabItem>
            <TabItem Header="Garage">
                <Grid>
                    <Label x:Name="Car1_Label" Content="Car 1" Margin="10,10,511,332" FontWeight="Bold" FontSize="16"/>
                    <Label x:Name="FirstCarName_Label" Content="Car Name: " Margin="10,41,511,301"/>
                    <Label x:Name="FirstCarName_Debug_Label" Content="" Margin="130,41,256,301"/>
                    <Image x:Name="FirstCarIcon" Height="64" Width="128" Margin="490,10,10,297" Source="Resources/AE85L.png" IsEnabled="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="Avatar">
                <Grid>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
